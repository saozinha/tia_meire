<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              tools:context="com.conceicaolourenco.tiameirerefeicoes.Editar_Prato"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#ffffff">


    <LinearLayout
        android:id="@+id/layout_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/logoin"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo_tia_meire" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edição de dados de Prato"
            android:textSize="30sp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"/>

    </LinearLayout >


    <LinearLayout
        android:id="@+id/campos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/layout_logo"
        android:paddingTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffffff">


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editCodigo"
            android:layout_alignParentStart="true"
            android:hint="* Código"
            android:textSize="30sp"
            android:ems="20"
            android:padding="20dp"
            android:textColor="#ff371bff">

            <requestFocus />

        </EditText>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editDescricao"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:hint="* Descrição do alimento"
            android:ems="20"
            android:textSize="30sp"
            android:textColor="#ff371bff" >
            <requestFocus />

        </EditText>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editPreco"
            android:layout_alignParentStart="true"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:hint="* Preço"
            android:ems="20"
            android:textSize="30sp"
            android:textColor="#ff371bff" />
    </LinearLayout>

    <!-- BOTOES ACIMA -->
    <!--
    Criar uma caixa

    http://escoladeandroid.blogspot.com.br/2012/05/criando-um-custom-dialog.html?utm_source=feedburner&utm_medium=feed&utm_campaign=Feed:+EscolaDeAndroid+(Escola+de+Android)
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff6d6d6d"
        android:orientation="horizontal" >

        <Button
            android:text="Editar"
            android:textSize="30sp"
            android:id="@+id/bt_editar"
            android:onClick="editarProduto"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffff0364" />

        <Button
            android:text="Excluir"
            android:textSize="30sp"
            android:id="@+id/bt_excluir"
            android:onClick="excluirProduto"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffff0364" />


    </LinearLayout>

    <!-- FIM DOS BOTOES -->

</LinearLayout>
