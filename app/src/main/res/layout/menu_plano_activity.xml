<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.conceicaolourenco.tiameirerefeicoes.Menu_plano">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/layout_novo_p"
        android:orientation="horizontal"
        android:background="#FFF5EE">


        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/btn_cardapio"
            android:src="@drawable/cardapio_red"
            android:layout_margin="25dp"
            android:clickable="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_cardapio"
            android:layout_gravity="center"
            android:layout_alignParentStart="true"
            android:text="Visualizar"
            android:textSize="30sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_Cad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/layout_novo_p"
        android:orientation="horizontal"
        android:background="#FFF5EE">

        <ImageView
            android:layout_width="105dp"
            android:layout_height="110dp"
            android:id="@+id/btn_cad_prato"
            android:src="@drawable/prato_roxo"
            android:layout_margin="25dp"
            android:clickable="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_cad_prato"
            android:layout_gravity="center"
            android:layout_alignParentStart="true"
            android:layout_margin="25dp"
            android:text="Cadastrar Pratos"
            android:textSize="30sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/layout_Cad"
        android:orientation="horizontal"
        android:id="@+id/edicao"
        android:background="#FFF5EE">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/btn_edit_prato"
            android:src="@drawable/editar_ico"
            android:layout_margin="25dp"
            android:clickable="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_edit_prato"
            android:layout_gravity="center"
            android:layout_alignParentStart="true"
            android:layout_margin="25dp"
            android:text="Editar Prato"
            android:textSize="30sp"
            android:clickable="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/edicao"
        android:orientation="horizontal"
        android:id="@+id/layout_entrega"
        android:background="#FFF5EE">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/btn_lista_pedidos"
            android:src="@drawable/delivery_colorido"
            android:layout_margin="25dp"
            android:clickable="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_lista_pedidos"
            android:layout_gravity="center"
            android:layout_alignParentStart="true"
            android:layout_margin="25dp"
            android:text="Visualizar Pedidos"
            android:textSize="30sp"
            android:clickable="true"/>

    </LinearLayout>

</RelativeLayout>
