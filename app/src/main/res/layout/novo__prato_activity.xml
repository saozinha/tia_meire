<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              tools:context="com.conceicaolourenco.tiameirerefeicoes.Novo_Prato"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#ffffff">


    <LinearLayout
        android:id="@+id/layout_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/logoin"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo_tia_meire" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionando Novo Prato"
            android:textSize="25sp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"/>

    </LinearLayout >



    <LinearLayout
        android:id="@+id/campos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/layout_logo"
        android:paddingTop="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffffff">


        <!--EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editCodigo"
            android:layout_alignParentStart="true"
            android:hint="* Código"
            android:textSize="30sp"
            android:ems="20"
            android:padding="20dp"
            android:textColor="#ff371bff">

            <requestFocus />

        </EditText -->

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editDescricao"
            android:layout_alignParentStart="true"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:hint="* Descrição do alimento"
            android:ems="20"
            android:textSize="25sp"
            android:textColor="#ff371bff" >
            <requestFocus />

        </EditText>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editDescricao"
            android:id="@+id/editPreco"
            android:layout_alignParentStart="true"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:hint="* Preço"
            android:ems="20"
            android:textSize="25sp"
            android:textColor="#ff371bff" />
    </LinearLayout>


    <!-- BOTOES ACIMA -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff6d6d6d"
        android:orientation="horizontal" >

        <Button
            android:text="Salvar"
            android:textSize="25sp"
            android:id="@+id/bt_enviar"
            android:onClick="salvarProduto"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="#ffff0364" />

    </LinearLayout>

    <!-- FIM DOS BOTOES -->

</LinearLayout>
